<!DOCTYPE html>
<html>
<head>
  <title>Bt3</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <div class='very-top'>
    <%= link_to 'Fit Families', family_accounts_path, class: 'logo' %>
    <div class='signer'>
      <% if family_account_signed_in? %>
        <%= link_to('Logout', destroy_family_account_session_path, :method => :delete) %>
        <%= link_to 'My Account' %>
      <% else %>
        <%= link_to('Login', new_family_account_session_path)  %>
      <% end %>
    </div>
  </div>
  <div class='navbar'>
    <%= link_to 'Nutrition', foods_path %>
    <%= link_to 'Activity' %>
    <% if family_account_signed_in? %>
      <b>You are signed in as: <%= current_family_account.email %></b>
    <% end %>
  </div>
</header>

<h3 id="notice"><%= notice %></h3>
<h3 class="alert"><%= alert %></h3>

<%= yield %>

<footer>
  <%= link_to 'Contact Us' %>
  <%= link_to 'FAQ' %>
  <%= link_to 'About Us' %>
</footer>


</body>
</html>






