<div class='middle-display'>
  <h2>Here are all of your favorites!</h2>
  <% if @child_account.favorite_foods.count == 0 %>
    <h2>You haven't added any favorites yet.</h2>
  <% else %>
    <table>
      <th>Food</th>
      <th>Food Category</th>
      <th>Food Type</th>
      <th>Rating</th>
      <% @favorite_foods.each do |ff| %>
        <tr>
          <td><%= link_to ff.name, child_account_favorite_food_path(@child_account, ff) %></td>
          <td><%= FoodCategory.find(ff.food_category).food_category %></td>
          <td><%= FoodType.find(ff.food_type).food_type %></td>
          <td class='rating'><%= ff.rating %></td>
          <td><%= link_to 'Edit My Food', edit_child_account_favorite_food_path(ff.child_account, ff) %></td>
          <td><%= link_to 'Remove', child_account_favorite_food_path(ff.child_account, ff), method: :delete, data: { confirm: 'Are you sure?' } %>
        </tr>
      <% end %>
    </table>
  <% end %>

  <%= link_to 'Add Your Own Favorite', new_child_account_favorite_food_path(@child_account), class: 'submit-button' %>
</div>