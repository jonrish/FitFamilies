<div class='family-account'>
  <h2>Let's get started!</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class='basic-form'>
  <%= devise_error_messages! %>
  
    <%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %><br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />   
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %><br />
    <%= f.label :first_name, 'First Name' %><br />
    <%= f.text_field :first_name %><br />
    <%= f.label :last_name, 'Last Name' %><br />
    <%= f.text_field :last_name %><br />
    <%= f.label :date_of_birth, 'Date of Birth' %><br />
    <%= f.date_select :date_of_birth, start_year: 1900, order: [:month, :day, :year] %><br />
    <%= f.label :zip_code, 'Zip Code' %><br />
    <%= f.text_field :zip_code %><br />
    <%= f.submit "Create Family Account", class: 'submit' %>
  </div>
<% end %>
