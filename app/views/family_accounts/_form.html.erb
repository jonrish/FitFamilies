<%= form_for(@family_account) do |f| %>
  <% if @family_account.errors.any? %>
    <div id='error explanation'>
      <h2><% pluralize(@family_account.errors.count, 'error') %><br> 
        Please try again.</h2>
      <ul>
        <% @family_account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end%>
      </ul>
    </div>
  <% end%>




  <div class="field">
    <%= f.label :email, 'Email Address' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, 'Password' %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :first_name, 'First Name' %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, 'Last Name' %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth, 'Date of Birth' %><br />
    <%= f.date_select :date_of_birth, start_year: 1900, order: [:month, :day, :year] %>
  </div>
  <div class="field">
    <%= f.label :zip_code, 'Zip Code' %><br />
    <%= f.text_field :zip_code %>
  </div>
  <div class="actions">
    <%= f.submit "Create/Update Family Account" %>
  </div>
<% end %>