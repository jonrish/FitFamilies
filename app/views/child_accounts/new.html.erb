<%= form_for([@family_account,@child_account]) do |f| %>
  <% if @child_account.errors.any? %>
    <div id='error explanation'>
      <h2><% pluralize(@child_account.errors.count, 'error') %><br> 
        Please try again.</h2>
      <ul>
        <% @child_account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end%>
      </ul>
    </div>
  <% end%>

  <ul>
    <li><%= f.label :username, 'Username' %><br />
        <%= f.text_field :username %></li>
    <li><%= f.label :gender, '' %></li>
        <%= f.select(:gender, [['male', 1],['female', 1]]) %></li>
    <li><%= f.label :date_of_birth, 'Date of Birth' %><br />
        <%= f.date_select :date_of_birth, start_year: 1990, order: [:month, :day, :year] %></li>
    <li><%= f.submit "Register Child Account" %></li>
  </ul>
<% end %>